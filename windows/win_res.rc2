    PUSHBUTTON "&Licence", IDA_LICENCE, 6, 52, 44, 14
    PUSHBUTTON "&RuTTY Web", IDA_WEB2, 56, 52, 50, 14     
    PUSHBUTTON "PuTTY &Web", IDA_WEB, 112, 52, 50, 14     
    CTEXT "RuTTY - a modified version of PuTTY", IDA_TEXT1, 10, 6, 194, 8
